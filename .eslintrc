{
    "parser": "babel-eslint",
    "extends": ["airbnb"],
    "rules": {
        "no-console": 0,
        "semi": [2, "always"],
        "comma-dangle": [2, "never"],
        "import/extensions": ["error", "ignorePackages", { "jsx": "always", "js": "never" }],
        "no-use-before-define": 0,
        "no-param-reassign": ["error", { "props": false }],
        "no-plusplus": 0,
        "react/destructuring-assignment": 0
    },
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "SERVER_URL": true,
        "SCRIPTS_URL": true
    }
}
